@model DOTNET_DIARIES.Models.Blogpost
@{
    ViewData["Title"] = @Model.Title;
}

<div class="container">
    <h1 class="text-center">@Model.Title</h1>

    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-center">
                <img src="@Model.ImageUrl" alt="Blogpost Image" class="img-fluid" />
            </div>
            <div class="d-flex justify-content-center">
                <p>@Model.PostedDate.ToString("MMMM dd, yyyy")</p>
            </div>
            <div class="d-flex justify-content-center">
                <p>@Model.Content</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <a href="@Url.Action("Index", "Blogposts")" class="btn btn-primary">Back to Blogposts</a>
        </div>
    </div>